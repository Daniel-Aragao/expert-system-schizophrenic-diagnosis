rule "Verificar sintoma de alucinação"
	when
		$patient : Patient()
		eval($patient.hasSymptom(ESymptomType.Hallucination) && $patient.getMonthsOfSymptom(ESymptomType.Hallucination) >= 1)
	then
		$patient.setAlucinacao(true);
		$patient.setEsquizofrenia(10*0.7);
	end
		

		
		
		
		
		
		
		
		
		
		
		
		
		
		
		