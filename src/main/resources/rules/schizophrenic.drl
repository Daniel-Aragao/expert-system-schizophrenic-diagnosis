rule "Regra 24"

	when
		$patient : Patient()
		eval($patient.getCronica() > $patient.getAguda() && $patient.getCronica() > $patient.getProdromica() && $patient.getCronica() > $patient.getPreMorbida())
	then
		$patient.setFase("Crônica");
		update($patient);
end

