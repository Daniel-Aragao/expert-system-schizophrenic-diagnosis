end

rule "Regra 29"

	when
		$patient : Patient()
		eval($patient.getFase().equalsIgnoreCase("Aguda") || $patient.getFase().equalsIgnoreCase("Crônica"))
	then
		$patient.setRemediar(true);
		update($patient);
end

rule "Regra 30"

	when
		$patient : Patient()
		eval($patient.getFase().equalsIgnoreCase("Aguda") || $patient.isRemediar())
	then
		$patient.addRecomendacoes("Remédio de primeira geração");
		update($patient);
end

